<!DOCTYPE html>
<html>
  <head>
    <title>Blocmarks</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class='d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm'>
      <h5 class='my-0 mr-md-auto font-weight-normal'><%= link_to 'Blocmarks', root_path, :class => 'my-0 mr-md-auto font-weight-normal' %></h5>
      <nav class='my-2 my-md-0 mr-md-3'>
        <% if user_signed_in? %>
          <%= link_to current_user.email, edit_user_registration_path, :class => 'p-2 text-dark' %> |
          <%= link_to 'My Blocmarks', user_path(current_user), :class => 'p-2 text-dark' %>
        </nav>
        <%= link_to 'Sign Out', destroy_user_session_path, method: :delete, :class => 'btn btn-outline-primary' %>
      <% else %>
      </nav>
      <%= link_to 'Sign In', new_user_session_path, :class => 'btn btn-outline-primary' %>
    <% end %>

  </div>
  <div class="container">
    <% if flash[:notice] %>
      <div class="alert alert-success">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= flash[:notice] %>
      </div>
      <% elsif flash[:alert] %>
        <div class="alert alert-warning">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <%= flash[:alert] %>
        </div>
      <% end %>

      <%= yield %>
    </div>
  </body>
